
@{
    ViewBag.Title = "BendAccountEditorIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tuseraccount

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div class="color_1_accout" style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 5%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                <a href="../BendAccount/BendAccountIndex">用户管理</a>
            </li>
            <li class="active">
                普通用户账户编辑
            </li>
        </ul>
    </div>



    <form method="post" action="../BendAccount/Update_AccountMSG">

        <h2 class="admin_add_one_h2">普通用户账户编辑</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_2">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户账号</span>
                    <input type="text" class="form-control" required value="@Model.UsAccount" name="UsAccount">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户密码</span>
                    <input type="text" class="form-control" required value="@Model.UsPassword" name="UsPassword">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户姓名</span>
                    <input type="text" style="width:150px;" class="form-control" required value="@Model.UsName" name="UsName">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户昵称</span>
                    <input type="text" style="width:150px;" class="form-control" required value="@Model.UsNiname" name="UsNiname">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">联系方式</span>
                    <input type="text" class="form-control" required value="@Model.UsPhone" name="UsPhone">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">身份证</span>
                    <input type="text" style="width:300px;" class="form-control" required value="@Model.UsIdcard" name="UsIdcard">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">电子邮箱</span>
                    <input type="text" class="form-control" required value="@Model.Usmail" name="Usmail">
                </div><br>
                <div class="input-group" style="display:none">
                    <input type="text" class="form-control" required value="@Model.ID" name="ID">
                    <input type="text" class="form-control" required value="@Model.UsSettime" name="UsSettime">
                </div><br>


            </div>
            <div class="hr_lone_long"></div>
            <div class="hr_lone_textarea">
                <p class="cd-label" for="cd-textarea">备注（字数不得大于500字）:</p>
                <textarea class="message"   id="cd-textarea" style="color:#ff6a00" name="UsRemark">@Model.UsRemark</textarea>
            </div>
        </div>

        <div class="button_sign">
            <button type="submit" class="btn btn-success">编辑保存</button><span class="width_buttom">&</span>
            <button type="reset" class="btn btn-danger">重置一下</button>
        </div>



    </form>
</div>

