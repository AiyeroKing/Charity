
@{
    ViewBag.Title = "BendAccountIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}



<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }

        .color_1_accout {
            position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 2.2%;
            z-index: -999;
        }
    </style>
</head>

<div class="back_div_color">

    <div class="color_1_accout">

    </div>

    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                用户管理
            </li>
        </ul>
    </div>

    <div class="back_div_color_two">

        <table class="table table-striped" align="center" style="text-align:center">
            <thead>
                <tr style="text-align:center">
                    <th width="15%" style="text-align:center;">用户账号</th>
                    <th width="10%" style="text-align:center;">用户姓名</th>
                    <th width="10%" style="text-align:center;">用户电话</th>
                    <th width="15%" style="text-align:center;">用户证件</th>
                    <th width="15%" style="text-align:center;">更多</th>
                    <th width="15%" style="text-align:center;">创建时间</th>
                    <th width="20%" style="text-align:center;">
                        操作<a href="../BendAccount/BendAccountAddIndex">
                            <div class="add_action_one" style="width:60px;margin-left:13%;">增加</div>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in ViewBag.List)
                    {
                        <tr style="text-align:center">
                            <td>@item.UsAccount</td>
                            <td>@item.UsName</td>
                            <td>@item.UsPhone</td>
                            <td>@item.UsIdcard</td>

                            <td><a href="../BendAccount/BendAccountArtialIndex?Id=@item.ID">详细请点开....</a></td>

                            <td>@item.UsSettime</td>

                            <td style="text-align:center">
                                <a href="../BendAccount/BendAccountEditorIndex?Id=@item.ID">
                                    <div class="add_edit_one">修改</div>
                                </a>
                                <a href="../BendAccount/Account_Delected?Id=@item.ID">
                                    <div class="add_delect_one">删除</div>
                                </a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
