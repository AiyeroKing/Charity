@{
    ViewBag.Title = "ItemsCollectionIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Charity-物品募捐</title>
    <link href="~/Content/css/Foreground/ItemsCollection/ItemsCollectionStyle.css" rel="stylesheet" />
    <link href="~/Content/img/ItemsCollection/default.css" rel="stylesheet" />
    <link href="~/Content/img/ItemsCollection/reset.css" rel="stylesheet" /><!-- CSS reset -->
    <link href="~/Content/img/ItemsCollection/style.css" rel="stylesheet" /><!-- Resource style -->
    <script src="~/Content/img/ItemsCollection/modernizr.js"></script>
</head>

<body>
    <div id="progress_ItemsCollection"></div>
    <!--小导航栏-->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../Home/HomeIndex">我的首页</a>
            </li>
            <li>
                <a href="../ItemsCollection/ItemsCollectionIndex"> 募捐系列</a>
            </li>
            <li class="active">
                物品募捐
            </li>
        </ul>
    </div>
    <div class="help_head_img"></div>
    <div class="itemcollect_div_all">
        <h2 class="h2_item_tital_1">捐赠物品</h2>
        <hr class="hr_cc_1" />
        <div class="form_input_submit">
            <div class="jq22-container">
                <!--<div class="jq22-content bgcolor-8">

                </div-->
                <form class="cd-form floating-labels" action="" method="post" enctype="multipart/form-data">
                    <fieldset>
                        <div class="error-message">
                            <p>募捐人信息输入</p>
                        </div>
                        <legend style="color:azure;">物品捐赠信息登入</legend>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">捐赠者姓名</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">捐赠人身份证</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">捐赠人所在地区</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">捐赠人联系方式</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="error-message2">
                            <p>募捐物品信息输入</p>
                        </div>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">物品名称</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                        <div class="icon">
                            <label class="cd-label" for="cd-company">物品估量价值</label>
                            <input class="company" type="text" name="cd-company" id="cd-company" style="background-color:white;color:#ff6a00" required>
                        </div>
                        <div>
                            <h4>物品类型</h4>

                            <p class="cd-select icon">
                                <select class="budget" style="color:#ff6a00" required>
                                    <option value="无" disabled selected>请选择物品类型...</option>
                                    <option value="1">衣物</option>
                                    <option value="2">书籍/报刊</option>
                                    <option value="3">电子设备</option>
                                    <option value="3">家具</option>
                                    <option value="3">收藏</option>
                                    <option value="3">其他</option>
                                </select>
                            </p>
                        </div>

                        <div>
                            <h4>捐赠方式</h4>

                            <ul class="cd-form-list">
                                <li>
                                    <input type="radio" name="radio-button" id="cd-radio-1" checked>
                                    <label for="cd-radio-1" style="color:#ff6a00">在线邮寄</label>
                                </li>

                                <li>
                                    <input type="radio" name="radio-button" id="cd-radio-2">
                                    <label for="cd-radio-2" style="color:#ff6a00">附近站点捐赠</label>
                                </li>


                            </ul>
                        </div>



                        <div class="error-message3">
                            <p>募捐物品实物图片上传</p>

                            <input type="file" name="files[]" id="demo-fileInput-4" multiple>


                        </div>





                        <div class="icon">
                            <label class="cd-label" for="cd-textarea">备注（字数不得大于500字）</label>
                            <textarea class="message" name="cd-textarea" id="cd-textarea" style="color:#ff6a00"></textarea>
                        </div>

                        <div>

                            <input type="submit" value="保存提交" style="position:absolute;margin-left:0%;">
                            <button type="reset" class="btn btn-warning" style="margin-left:50%;margin-top:20px;">重置</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Content/img/ItemsCollection/main.js"></script> <!-- Resource jQuery -->
</body>