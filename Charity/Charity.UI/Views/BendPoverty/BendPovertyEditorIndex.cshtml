
@{
    ViewBag.Title = "BendPovertyEditorIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tpoverty

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 23.5%;
            z-index: -999;">
</div>
<div class="back_div_color">



    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li>
                <a href="../BendPoverty/BendPovertyIndex">资讯管理</a>
            </li>
            <li class="active">
                贫困详情编辑
            </li>
        </ul>
    </div>

    <form method="post" action="../BendPoverty/Update_PovertyMSG">

        <h2 class="admin_add_one_h2">贫困详情编辑页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_3">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">贫困地区</span>
                    <input type="text" class="form-control" required  value="@Model.ApplyArea" name="ApplyArea">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">负责人姓名</span>
                    <input type="text" class="form-control" required value="@Model.ApplyName" name="ApplyName">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">负责人联系方式</span>
                    <input type="text" style="width:150px;" class="form-control" required value="@Model.ApplyPhone" name="ApplyPhone">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">贫困申请资金</span>
                    <input type="text" class="form-control" required value="@Model.ApplyValue" name="ApplyValue">
                </div><br>

                <div class="input-group" style="display:none">
                    <span class="input-group-addon" style="width:100px;">贫困申请创建时间</span>
                    <input type="text" class="form-control" required value="@Model.ApplySetTime" name="ApplySetTime">
                    <span class="input-group-addon" style="width:100px;">ID</span>
                    <input type="text" class="form-control" required value="@Model.ID" name="ID">
                </div><br>

            </div>

            <div class="img_prove_show">
                <img src="@Model.Srcimg" width="100%" height="100%" />
            </div>

            <div class="hr_lone_long_1"></div>
            <div class="hr_lone_textarea_1">
                <p class="cd-label" for="cd-textarea">贫困地区介绍:</p>
                <textarea class="message_1" id="cd-textarea" style="color:#ff6a00"  name="ApplyInfo">@Model.ApplyInfo</textarea>
            </div>
        </div>

        <div style="margin-left: 40%;margin-top: -4%;">
            <button type="submit" class="btn btn-success">编辑并保存</button><span class="width_buttom">&</span>
            <button type="reset" class="btn btn-danger">重置一下</button>
        </div>
    </form>
   

</div>

