
@{
    ViewBag.Title = "BendPovertyIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>


<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 23.5%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                贫困管理
            </li>
        </ul>
    </div>


    <div class="back_div_color_two">

        <table class="table table-striped" align="center" style="text-align:center">
            <thead>
                <tr style="text-align:center">
                    <th width="15%" style="text-align:center;">贫困地区</th>
                    <th width="10%" style="text-align:center;">负责人姓名</th>
                    <th width="10%" style="text-align:center;">负责人联系方式</th>
                    <th width="20%" style="text-align:center;">贫困地区介绍</th>
                    <th width="10%" style="text-align:center;">贫困申请资金</th>
                    <th width="15%" style="text-align:center;">创建时间</th>
                    <th width="20%" style="text-align:center;">
                        操作<a href="../BendPoverty/BendPovertyAddIndex">
                            <div class="add_action_one" style="width:60px;margin-left:13%;">增加</div>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in ViewBag.List)
                    {
                        <tr style="text-align:center">
                            <td>@item.ApplyArea</td>
                            <td>@item.ApplyName</td>
                            <td>@item.ApplyPhone</td>
                            <td><a href="../BendPoverty/BendPovertyArtialIndex?Id=@item.ID">详细请点开....</a></td>
                            <td>@item.ApplyValue</td>
                            <td>@item.ApplySetTime</td>

                            <td style="text-align:center">

                                <a href="../BendPoverty/BendPovertyEditorIndex?Id=@item.ID">
                                    <div class="add_edit_one">修改</div>
                                </a>
                                <a href="../BendPoverty/Poverty_Delected?Id=@item.ID">
                                    <div class="add_delect_one">删除</div>
                                </a>
                            </td>

                        </tr>
                    }
                }

            </tbody>
        </table>

    </div>
</div>
