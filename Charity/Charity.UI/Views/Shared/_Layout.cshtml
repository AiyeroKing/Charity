<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>CharitySale</title> <!--慈善义卖网站-->
    <link rel="Shortcut Icon" href="~/favicon.ico" />
    <!--导入bootstarp.css样式-->
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <!--导入自定义全局的css样式-->
    <link href="~/Content/css/Foreground/_Layout/Layout.css" rel="stylesheet" />
    <!--导入顶部导航栏的css样式-->
    <link href="~/Content/css/Foreground/_Layout/nav.css" rel="stylesheet" />
    <!--导入JQ文件-->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!--导入自定义的js文件-->
    <script src="~/Content/js/Foreground/LayoutJS.js" defer></script>
</head>
<body>


    <div id="navigation" class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand cronitor-logo"> Cronitor</a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                

                    <li>
                      @Html.ActionLink("Pricing", "HomeIndex", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Docs", "HomeIndex", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Integrations", "HomeIndex", "Home")
                    </li>
                    <li class="hidden-sm">
                        @Html.ActionLink("Libraries", "HomeIndex", "Home")
                          
                    </li>
                    <li class="hidden-xs hidden-sm">
                        @Html.ActionLink("Tel 866-979-9773", "HomeIndex", "Home")

                </ul>

                <!-- Sign In / Sign Up -->
                <ul class="nav navbar-nav navbar-right">


                    <li id="nav-signin">
                        <a href="#" data-toggle="modal" data-target=".bs-modal-sm" class="js_sign-in-button"><i class="fa fa-lock"></i> @Html.ActionLink("Log in", "HomeIndex", "Home")</a>
                    </li>


                    <li id="nav-signup">
                        <div>
                            <a href="#" type="button" class="btn btn-sm btn-primary btn-sign-up mll" style="margin:15px">Sign Up</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>

























    <div style="text-align:center">
            @RenderBody()
    </div>



    <!---导入JQ.js文件-->
    <script src="~/Content/js/bootstrap/jquery.js"></script>
    <!--导入Bootstarp.js文件-->
    <script src="~/Content/js/bootstrap/bootstrap.js"></script>
</body>
</html>
