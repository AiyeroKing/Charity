
@{
    ViewBag.Title = "BendShopIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}


<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 11%;
            z-index: -999;">
</div>






<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                商品管理
            </li>
        </ul>
    </div>

    <div class="back_div_color_two">

        <table class="table table-striped" align="center" style="text-align:center">
            <thead>
                <tr style="text-align:center">
                    <th width="15%" style="text-align:center;">物品名称</th>
                    <th width="10%" style="text-align:center;">捐赠人姓名</th>
                    <th width="10%" style="text-align:center;">捐赠人电话</th>
                    <th width="15%" style="text-align:center;">捐赠人证件</th>
                    <th width="15%" style="text-align:center;">更多</th>
                    <th width="15%" style="text-align:center;">创建时间</th>
                    <th width="20%" style="text-align:center;"> 操作<a href="../BendShop/BendShopAddIndex">
    <div class="add_action_one" style="width:60px;margin-left:13%;">增加</div>
</a></th>
                </tr>
            </thead>
            <tbody>
@{
    foreach (var item in ViewBag.List)
    {
                <tr style="text-align:center">
                    <td>@item.ShopName</td>
                    <td>@item.ShopCharityName</td>
                    <td>@item.ShopCharityPhone</td>
                    <td>@item.ShopCharityIdcard</td>

                    <td><a href="../BendShop/BendShopArtialIndex?Id=@item.ID">详细请点开....</a></td>
                                                                     
                    <td>@item.ShopSetTime</td>

                    <td style="text-align:center">
                        
                        <a href="../BendShop/BendShopEidtorIndex?Id=@item.ID">
                            <div class="add_edit_one">修改</div>
                        </a>
                        <a href="../BendShop/Shop_Delected?Id=@item.ID">
                            <div class="add_delect_one">删除</div>
                        </a>
                    </td>

                </tr>
        }
    }
            </tbody>
        </table>

    </div>
</div>

