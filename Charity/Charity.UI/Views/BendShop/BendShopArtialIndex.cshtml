
@{
    ViewBag.Title = "BendShopArtialIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tshop

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 11%;
            z-index: -999;">
</div>


<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li>
                <a href="../BendShop/BendShopIndex">捐赠商品管理</a>
            </li>
            <li class="active">
                捐赠商品详情
            </li>
        </ul>
    </div>



    <form>

        <h2 class="admin_add_one_h2">捐赠商品详情页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_4">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">物品名称</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopName">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">物品价值</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopValue">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">物品类型</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopSale">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠地区</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopArea">
                </div><br>

                <div class="nnv_hr_cor"></div>
                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠人姓名</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopCharityName">
                </div><br>

               

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠人联系方式</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopCharityPhone">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠方式</span>
                    <input type="text" style="width:150px;" class="form-control" required readonly value="@Model.ShopCharityWay">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠人证件</span>
                    <input type="text" class="form-control" required readonly value="@Model.ShopCharityIdcard">
                </div><br>
                <div class="input-group" style="display:none">
                    <input type="text" class="form-control" required readonly value="@Model.ID">
                    <input type="text" class="form-control" required readonly value="@Model.ShopSetTime">
                </div>




            </div>

            <div class="img_prove_show">
                <img src="@Model.Scrimg" width="100%" height="100%" />
            </div>

            <div class="hr_lone_long_2"></div>
            <div class="hr_lone_textarea_3">
                <p class="cd-label" for="cd-textarea">捐赠商品介绍:</p>
                <textarea class="message_2" readonly name="cd-textarea" id="cd-textarea" style="color:#ff6a00">@Model.ShopRemark</textarea>
            </div>
        </div>

        <div style="margin-left:47%;margin-top:-3%;">
            <a href="../BendShop/BendShopEidtorIndex?Id=@Model.ID"><input type="button" class="btn btn-success" value="进入编辑"></a>
        </div>
    </form>

</div>


   