
@{
    ViewBag.Title = "BendInfoAritialIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tinfo

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 29.5%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li >
                <a href="../BendInfo/BendInfoIndex">资讯管理</a>
            </li>
            <li class="active">
                资讯详情
            </li>
        </ul>
    </div>




    <form>

        <h2 class="admin_add_one_h2">资讯详情页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_3">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">资讯标题</span>
                    <input type="text" class="form-control" required readonly value="@Model.InfoTital">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">编辑人姓名</span>
                    <input type="text" class="form-control" required readonly value="@Model.InfoName">
                </div><br>
            </div>
            <div class="ook_liuyanbang">
                <p class="cd-label" for="cd-textarea">资讯内容:</p>
                <textarea readonly class="message"  id="cd-textarea" style="color:#ff6a00">@Model.InfoBody</textarea>
            </div>
            <a pattern="yyyy-MM-dd HH:mm:ss">创建时间:@Model.InfoSetTime</a>
        </div>

        <div class="button_sign_1">
            <a href="../BendInfo/BendInfoEditorIndex?Id=@Model.ID"><input type="button" class="btn btn-success" value="编辑此资讯"></a>
        </div>



    </form>




</div>

