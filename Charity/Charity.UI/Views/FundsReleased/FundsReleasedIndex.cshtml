@{
    ViewBag.Title = "FundsReleasedIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Charity-善款公开</title>
    <link href="~/Content/css/Foreground/FundsReleased/FundsReleasedStyle.css" rel="stylesheet" />
</head>

<body>
    <div id="progress_FundsReleased"></div>
        <!--小导航栏-->
            <div >
                <ul class="breadcrumb">
                    <li>
                        <a href="../Home/HomeIndex">我的首页</a>
                    </li>
                    <li>
                        <a href="../FundsReleased/FundsReleasedIndex"> 爱心系列</a>
                    </li>
                    <li class="active">
                        善款公开
                    </li>

                </ul>
            </div>
        <hr />
    <div class="marginsss_aa1">
        <div class="help_head_img">
            <a href="../FundsReleased/FundsReleasedIndex">
                <div class="button_cishanggongkai">
                    <span>慈善公布</span>
                </div>
            </a>
            @{ 
            <div style="margin-left:20%"> 
                <div class="Maney_show_1">
                    <span class="font_color_bule">贫困申请总资金:<span style="color:red">¥@ViewBag.ListTwo[3].AllMoney</span>.</span>
                </div>

                <div class="Maney_show_1">
                    <span class="font_color_bule">总价值资金:<span style="color:red">¥@ViewBag.ListTwo[4].AllMoney</span>.</span>
                </div>
            </div>
                }
        </div>
        <div class="boxc_a1_con">
            <div class="boxc_a1_con_one">
            <ul>
                <li style="background-color:brown">
                    <a href="../FundsReleased/FundsReleasedIndex"><input class="ooood_1" type="button" value="善款需求"></a>
                </li>
                <li style="background-color:cyan">
                    <a href="../FundsReleased/FundsReleasedtwoIndex"><input class="ooood_2" type="button" value="筹集善款"></a>
                </li>
                <li class="order-now">
                    <a href="../FundsReleased/FundsReleasedIndex">刷新纪录</a>
                </li>
             
      
            </ul>
            </div >
            <div class="boxc_a2_con_one">
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>贫困地区</th>
                            <th>负责人姓名</th>
                            <th>负责人联系方式</th>
                            <th>贫困申请资金</th>
                            <th>创建时间</th>
                            <th>贫困地区介绍</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in ViewBag.List)
                            {
                                <tr>
                                    <td>@item.ApplyArea</td>
                                    <td>@item.ApplyName</td>
                                    <td>@item.ApplyPhone</td>
                                    <td>@item.ApplyValue</td>
                                    <td>@item.ApplySetTime</td>
                                    <td class="td_checkmesg"><a href="../Subsidization/AritialSubsidizationIndex?Id=@item.ID"><div>查看详情</div></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

