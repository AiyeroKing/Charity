
@{
    ViewBag.Title = "BendMoneyEidtorIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tmoney

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 17%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                <a href="../BendMoney/BendMoneyIndex">资金管理</a>
            </li>
            <li class="active">
                资金捐助编辑
            </li>
        </ul>
    </div>


    <form method="post" action="../BendMoney/Update_MoneyMSG">

        <h2 class="admin_add_one_h2">资金捐助编辑页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_2" style="margin-top:10%;">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠人姓名</span>
                    <input type="text" class="form-control" required value="@Model.ChrityName" name="ChrityName" />
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠资金</span>
                    <input type="tel" class="form-control" style="background-color:red;color:white;" required value="@Model.ChrityMoney" name="ChrityMoney" />
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">捐赠人联系方式</span>
                    <input type="text" class="form-control" required value="@Model.ChrityPhone" name="ChrityPhone" />
                </div><br>

                <div class="input-group" >
                    <span class="input-group-addon" style="width:100px;">捐赠人证件</span>
                    <input type="text" style="width:300px;" class="form-control" required value="@Model.ChrityIdcard" name="ChrityIdcard" />
                </div><br>

                <div class="input-group" style="display:none">
                    <span class="input-group-addon" style="width:100px;">捐赠人证件</span>
                    <input type="text" style="width:300px;" class="form-control" required value="@Model.ChritySetTime" name="ChritySetTime" />
                    <input type="text" style="width:300px;" class="form-control" required value="@Model.ID" name="ID" />

                </div><br>


            </div>
            <div class="hr_lone_long_1"></div>
            <div class="hr_lone_textarea" style="margin-top:-18%">
                <p class="cd-label" for="cd-textarea">备注（字数不得大于500字）:</p>
                <textarea class="message"   id="cd-textarea" style="color:#ff6a00"  name="ChrityRemark">@Model.ChrityRemark</textarea>
            </div>
        </div>

        <div style="margin-left:42%;margin-top:-10%;">
            <button type="submit" class="btn btn-success">编辑保存</button><span class="width_buttom">&</span>
            <button type="reset" class="btn btn-danger">重置一下</button>
        </div>
    </form>
</div>
