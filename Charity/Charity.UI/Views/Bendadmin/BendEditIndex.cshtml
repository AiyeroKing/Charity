
@{
    ViewBag.Title = "BendEditIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

@model Charity.Model.Tadmin

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div class="color_1_accout" style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 42%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                <a href="../Bendadmin/BendadminIndex">用户管理</a>
            </li>
            <li class="active">
                编辑管理员账户
            </li>
        </ul>
    </div>



    <form method="post"  action="/Bendadmin/UpdateBendadmindMSG">

        <h2 class="admin_add_one_h2">管理员账户编辑页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_2">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">管理员账号</span>
                    <input type="text" class="form-control" required name="AdAccount" value="@Model.AdAccount">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">管理员密码</span>
                    <input type="text" class="form-control" required name="AdPassWord" value="@Model.AdPassWord">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户姓名</span>
                    <input type="text" style="width:150px;" class="form-control" required name="AdName" value="@Model.AdName">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">联系方式</span>
                    <input type="text" class="form-control" required name="AdPhone" value="@Model.AdPhone">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">身份证</span>
                    <input type="text" style="width:300px;" class="form-control" required name="AdIdCard" value="@Model.AdIdCard">
                </div><br>

                <div class="input-group" style="display:none">
                    <span class="input-group-addon" style="width:100px;">创建时间</span>
                    <input type="text" style="width:300px;" class="form-control" required  name="AdSetTime" value="@Model.AdSetTime">
                    <input type="text" style="width:300px;" class="form-control" required  name="ID" value="@Model.ID">
                </div><br>


                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">部门</span>
                    <select  class="budget" style="color:#ff6a00;width:200px;height:35px;" required   name="AdSection" >
                        <option value="无部门" selected>请选择部门类型...</option>
                        <option value="销售部">销售部</option>
                        <option value="运营部">运营部</option>
                        <option value="管理层">管理层</option>
                        <option value="志捐层">志捐层</option>
                    </select>
                </div><br>


            </div>
            <div class="hr_lone_long"></div>
            <div class="hr_lone_textarea">
                <p class="cd-label" for="cd-textarea">备注（字数不得大于500字）:</p>
                <textarea class="message" name="AdRemark" id="cd-textarea" style="color:#ff6a00">@Model.AdRemark</textarea>
            </div>
        </div>

        <div class="button_sign">
            <button type="submit" class="btn btn-success">编辑保存</button><span class="width_buttom">&</span>
            <button type="reset" class="btn btn-danger">重置一下</button>
        </div>
    </form>
</div>





