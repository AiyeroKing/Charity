
@{
    ViewBag.Title = "BendAddadmintwoIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}


<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div class="color_1_accout" style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 42%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                <a href="../Bendadmin/BendadminIndex">管理员</a>
            </li>
            <li class="active">
                增加管理员账户
            </li>
        </ul>
    </div>

    <form method="post" action="../Bendadmin/AddBendadmindMSG">

        <h2 class="admin_add_one_h2">管理员账户添加页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_2">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">管理员账号</span>
                    <input type="text" class="form-control" placeholder="请输入管理员账号！" name="AdAccount" required >
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">管理员密码</span>
                    <input type="text" class="form-control" placeholder="请输入管理员密码！"  name="AdPassWord" required >
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">用户姓名</span>
                    <input type="text" style="width:150px;" class="form-control" placeholder="请输入管理员姓名！"  name="AdName" required>
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">联系方式</span>
                    <input type="text" class="form-control" placeholder="请输入管理员联系方式！"  name="AdPhone" required>
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">身份证</span>
                    <input type="text" style="width:300px;" class="form-control" placeholder="请输入管理员身份证！"  name="AdIdCard" required>
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">部门</span>
                    <select class="budget" style="color:#ff6a00;width:200px;height:35px;"name="AdSection">
                        <option value="无部门" selected = "selected">请选择部门类型...</option>
                        <option value="销售部">销售部</option>
                        <option value="运营部">运营部</option>
                        <option value="管理层">管理层</option>
                        <option value="志捐层">志捐层</option>
                    </select>
                </div><br>
            </div>
            <div class="hr_lone_long"></div>
            <div class="hr_lone_textarea">
                <p class="cd-label" for="cd-textarea">备注（字数不得大于500字）:</p>
                <textarea class="message"  id="cd-textarea" style="color:#ff6a00" name="AdRemark" maxlength="500"></textarea>
            </div>
        </div>
       
            <div class="button_sign">
                <button type="submit" class="btn btn-success">提交注册</button><span class="width_buttom">&</span>
                <button type="reset" class="btn btn-danger">重置一下</button>
            </div>
        


    </form>




</div>

