
@{
    ViewBag.Title = "BendGuestbookIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}

<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 36%;
            z-index: -999;">
</div>



<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                留言管理
            </li>
        </ul>
    </div>

    <div class="back_div_color_two">

        <table class="table table-striped" align="center" style="text-align:center">
            <thead>
                <tr>
                    <th width="10%" style="text-align:center;">留言标题</th>
                    <th width="10%" style="text-align:center;">留言人姓名</th>
                    <th width="20%" style="text-align:center;">留言内容</th>
                    <th width="10%" style="text-align:center;">留言人主页</th>
                    <th width="10%" style="text-align:center;">留言人电子邮箱</th>
                    <th width="10%" style="text-align:center;">留言人联系方式</th>
                    <th width="10%" style="text-align:center;">留言创建时间</th>
                    <th width="20%" style="text-align:center;">
                        操作<a href="../BendGuestbook/BendAddGuestbookIndex">
                            <div class="add_action_one" style="position:absolute;width:60px; margin-left:13.5%;">增加</div>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in ViewBag.List)
                    {
                        <tr>
                            <td>@item.BoredTital</td>
                            <td>@item.BoredName</td>
                            <td><a href="../BendGuestbook/BendGuestbookarticleIndex?Id=@item.ID">详细请点开....</a></td>
                            <td>@item.BoredIndex</td>
                            <td>@item.BoredEmail</td>
                            <td>@item.BoredTelphone</td>
                            <td>@item.BoredSetTime</td>

                            <td style="text-align:center">
                                <a href="../BendGuestbook/BendEditerGuestbookIndex">
                                    <div class="add_edit_one">修改</div>
                                </a>
                                <a href="#">
                                    <div class="add_delect_one">删除</div>
                                </a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
