
@{
    ViewBag.Title = "BendAddGuestbookIndex";
    Layout = "~/Views/Shared/_BackEnd_Layout.cshtml";
}



<head>
    <link href="~/Content/css/Background/Bendadmin/BendaminStyle.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/Background/Bendadmin/adminBend.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }
    </style>
</head>

<div style=" position: absolute;
            width: 200px;
            height: 70px;
            background-color: yellow;
            margin-left: -10%;
            margin-top: 36%;
            z-index: -999;">
</div>

<div class="back_div_color">
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="../BendHome/BendHomeIndex">后台主页</a>
            </li>
            <li class="active">
                <a href="../BendGuestbook/BendGuestbookIndex">留言管理</a>
            </li>
            <li class="active">
                添加留言
            </li>
        </ul>
    </div>




    <form method="post" action="/BendGuestbook/AddGuestbookMSG">

        <h2 class="admin_add_one_h2">留言添加页面</h2>

        <div class="admin_add_one_div_1">

            <div class="admin_add_one_div_3">

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">留言人标题</span>
                    <input type="text" class="form-control" required name="BoredTital"> 
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">留言人姓名</span>
                    <input type="text" class="form-control" required name="BoredName">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">留言人主页</span>
                    <input type="text" class="form-control" required name="BoredIndex">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">留言人电子邮箱</span>
                    <input type="text" class="form-control" required name="BoredEmail">
                </div><br>

                <div class="input-group">
                    <span class="input-group-addon" style="width:100px;">留言人联系方式</span>
                    <input type="text" class="form-control" required name="BoredTelphone">
                </div><br>

            </div>
            <div class="ook_liuyanbang">
                <p class="cd-label" for="cd-textarea">留言内容:</p>
                <textarea class="message" name="BoredBody" id="cd-textarea" style="color:#ff6a00"></textarea>
            </div>
        </div>

        <div class="button_sign_2">
            <button type="submit" class="btn btn-success">添加提交</button><span class="width_buttom">&</span>
            <button type="reset" class="btn btn-danger">重置一下</button>
        </div>



    </form>




</div>

